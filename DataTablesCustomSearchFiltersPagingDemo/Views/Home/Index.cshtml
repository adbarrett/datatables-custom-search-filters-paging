@model List<string>
@{
    ViewBag.Title = "Home Page";
}

@section styles
{
    <link href="//cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
}

<div class="page-header">
    <h2 class="text-center">Employees</h2>
</div>

<form>
    <div class="row form-group">
        <label class="col-md-3 col-form-label">First Name</label>
        <div class="col-md-3">
            <div class="input-group">
                <input class="form-control" type="text" id="first-name-filter" />
            </div>
        </div>
        <label class="col-md-3 col-form-label">Last Name</label>
        <div class="col-md-3">
            <div class="input-group">
                <input class="form-control" type="text" id="last-name-filter" />
            </div>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-md-2 col-form-label">Date of Birth</label>
        <label class="col-md-1 col-form-label">From</label>
        <div class="col-md-3">
            <div class="input-group">
                <input class="form-control date-filter" type="date" id="from-date-filter" />
            </div>
        </div>
        <label class="col-md-3 col-form-label">To</label>
        <div class="col-md-3">
            <div class="input-group">
                <input class="form-control date-filter" type="date" id="to-date-filter" />
            </div>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-md-3 col-form-label">Department</label>
        <div class="col-md-9">
            <div class="input-group">
                @Html.DropDownList("Department", new SelectList(Model), "Please select a department...", new { @class = "form-control", id = "department-filter" })
            </div>
        </div>
    </div>
</form>

<hr />

<div class="row">
    <div class="col-md-12">
        <table id="employees-list" class="table table-striped table-bordered"></table>

<div class="row" id="paging-options">
    <div class="col-md-9">
        <ul class="pagination" id="page-options"></ul>
    </div>
    <div class="col-md-3">
        <select id="page-length" class="form-control pull-right">
            <option value="1">1</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
            <option value="-1">All</option>
        </select>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Custom/index.js"></script>
}